@model DoctorCreateVM

<div class="card o-hidden border-0 shadow-lg my-5">
    <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">Həkim Qeydiyyatı</h1>
                    </div>

                    <form asp-action="RegisterDoctor" method="post" enctype="multipart/form-data" class="user">

                        <!-- Ad və Soyad -->
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <input asp-for="AppUser.Name" class="form-control form-control-user" placeholder="Ad" />
                                <span asp-validation-for="AppUser.Name" class="text-danger small"></span>
                            </div>
                            <div class="col-sm-6">
                                <input asp-for="AppUser.Surname" class="form-control form-control-user" placeholder="Soyad" />
                                <span asp-validation-for="AppUser.Surname" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- İstifadəçi Adı -->
                        <div class="form-group">
                            <input asp-for="AppUser.UserName" class="form-control form-control-user" placeholder="İstifadəçi adı" />
                            <span asp-validation-for="AppUser.UserName" class="text-danger small"></span>
                        </div>

                        <!-- Email -->
                        <div class="form-group">
                            <input asp-for="AppUser.Email" class="form-control form-control-user" placeholder="E-poçt" />
                            <span asp-validation-for="AppUser.Email" class="text-danger small"></span>
                        </div>

                        <!-- Telefon və Doğum tarixi -->
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <input asp-for="AppUser.PhoneNumber" class="form-control form-control-user" placeholder="Telefon" />
                                <span asp-validation-for="AppUser.PhoneNumber" class="text-danger small"></span>
                            </div>
                            <div class="col-sm-6">
                                <input asp-for="AppUser.DateOfBirth" type="date" class="form-control form-control-user" />
                                <span asp-validation-for="AppUser.DateOfBirth" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Şəkil -->
                        <div class="form-group">
                            <input asp-for="AppUser.Image" type="file" class="form-control-file" />
                            <span asp-validation-for="AppUser.Image" class="text-danger small"></span>
                        </div>

                        <!-- Şifrə -->
                        <div class="form-group">
                            <input asp-for="AppUser.Password" type="password" class="form-control form-control-user" placeholder="Şifrə" />
                            <span asp-validation-for="AppUser.Password" class="text-danger small"></span>
                        </div>

                        <!-- Həkim Xüsusiləşməsi (Doctor infos) -->
                        <div class="form-group">
                            <input asp-for="Specialty" class="form-control form-control-user" placeholder="İxtisas (məs: Pediatr)" />
                            <span asp-validation-for="Specialty" class="text-danger small"></span>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <input asp-for="WorkingHours" class="form-control form-control-user" placeholder="İş saatları (məs: 09:00–17:00)" />
                                <span asp-validation-for="WorkingHours" class="text-danger small"></span>
                            </div>
                            <div class="col-sm-6">
                                <input asp-for="RoomNumber" class="form-control form-control-user" placeholder="Otaq nömrəsi" />
                                <span asp-validation-for="RoomNumber" class="text-danger small"></span>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary btn-user btn-block">
                            Hesabı Qeydiyyatdan Keçir
                        </button>
                    </form>

                    <hr>
                    <div class="text-center">
                        <a class="small" asp-action="Login">Hesabınız var? Daxil olun!</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
