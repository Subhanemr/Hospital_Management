@model LoginVM

<!-- Outer Row -->
<div class="row justify-content-center">

    <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Daxil Ol</h1>
                            </div>

                            <form asp-action="Login" method="post" class="user">
                                <div class="form-group">
                                    <input asp-for="UserNameOrEmail" class="form-control form-control-user"
                                           placeholder="İstifadəçi adı və ya Email" />
                                    <span asp-validation-for="UserNameOrEmail" class="text-danger small"></span>
                                </div>

                                <div class="form-group">
                                    <input asp-for="Password" type="password" class="form-control form-control-user"
                                           placeholder="Şifrə" />
                                    <span asp-validation-for="Password" class="text-danger small"></span>
                                </div>

                                <div class="form-group">
                                    <div class="custom-control custom-checkbox small">
                                        <input asp-for="IsRemembered" class="custom-control-input" id="rememberMe" />
                                        <label class="custom-control-label" for="rememberMe">Məni yadda saxla</label>
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-primary btn-user btn-block">
                                    Daxil Ol
                                </button>
                            </form>

                            <hr>
                            <div class="text-center">
                                <a class="small" asp-action="RegisterPatient">Pasiyent olaraq qeydiyyat</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
