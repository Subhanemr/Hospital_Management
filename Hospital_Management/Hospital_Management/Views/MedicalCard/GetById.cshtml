@model MedicalCardGetVM

<div class="container-fluid">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3 text-gray-800">Tibbi Kart Detalları</h1>
        <a asp-action="Index" class="btn btn-secondary">← Geri</a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Detallı Məlumat</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Pasiyent</th>
                            <th>Xəstəlik Tarixi</th>
                            <th>Lab Nəticələri</th>
                            <th>SoftSilinib?</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.Patient!.AppUser!.Name @Model.Patient.AppUser.Surname</td>
                            <td>@Model.DiseaseHistory</td>
                            <td>@Model.LabResults</td>
                            <td>
                                @(Model.IsDeleted ? "✅ Bəli" : "❌ Xeyr")
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
