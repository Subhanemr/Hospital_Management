@model DoctorUpdateVM

<div class="row justify-content-center">
    <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center mb-4">
                                <h1 class="h4 text-gray-900">Həkimi Redaktə Et</h1>
                            </div>

                            <form asp-action="Update" method="post" class="user">

                                <!-- Specialty -->
                                <div class="form-group">
                                    <input asp-for="Specialty" class="form-control form-control-user" placeholder="İxtisas (məs: Neyrocərrah)" />
                                    <span asp-validation-for="Specialty" class="text-danger small"></span>
                                </div>

                                <!-- Working Hours -->
                                <div class="form-group">
                                    <input asp-for="WorkingHours" class="form-control form-control-user" placeholder="İş saatı (məs: 09:00–17:00)" />
                                    <span asp-validation-for="WorkingHours" class="text-danger small"></span>
                                </div>

                                <!-- Room Number -->
                                <div class="form-group">
                                    <input asp-for="RoomNumber" class="form-control form-control-user" placeholder="Otaq nömrəsi" />
                                    <span asp-validation-for="RoomNumber" class="text-danger small"></span>
                                </div>

                                <!-- AppUser ID (readonly göstərici) -->
                                <div class="form-group">
                                    <input asp-for="AppUserId" class="form-control form-control-user" readonly />
                                    <span asp-validation-for="AppUserId" class="text-danger small"></span>
                                </div>

                                <button type="submit" class="btn btn-warning btn-user btn-block">
                                    Yadda Saxla
                                </button>
                            </form>

                            <div class="text-center mt-3">
                                <a asp-action="Index" class="small">← Siyahıya qayıt</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
