@model DoctorGetVM

<div class="container-fluid">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3 text-gray-800">Həkim Detalları</h1>
        <a asp-action="Index" class="btn btn-secondary">← Geri</a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Həkim Məlumatları</h6>
        </div>
        <div class="card-body">
            <table class="table table-bordered" width="100%">
                <tbody>
                    <tr>
                        <th>Ad Soyad</th>
                        <td>@Model.AppUser?.Name @Model.AppUser?.Surname</td>
                    </tr>
                    <tr>
                        <th>İxtisas</th>
                        <td>@Model.Specialty</td>
                    </tr>
                    <tr>
                        <th>İş Saatları</th>
                        <td>@Model.WorkingHours</td>
                    </tr>
                    <tr>
                        <th>Otaq Nömrəsi</th>
                        <td>@Model.RoomNumber</td>
                    </tr>
                    <tr>
                        <th>Soft Silinib?</th>
                        <td>@(Model.IsDeleted ? "✅ Bəli" : "❌ Xeyr")</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
