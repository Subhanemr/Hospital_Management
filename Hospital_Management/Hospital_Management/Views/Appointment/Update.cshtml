@model AppointmentUpdateVM

<div class="row justify-content-center">
    <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center mb-4">
                                <h1 class="h4 text-gray-900">Görüşü Redaktə Et</h1>
                            </div>

                            <form asp-action="Update" method="post" class="user">

                                <!-- Görüş Tarixi -->
                                <div class="form-group">
                                    <input asp-for="AppointmentDate" type="datetime-local" class="form-control form-control-user" />
                                    <span asp-validation-for="AppointmentDate" class="text-danger small"></span>
                                </div>

                                <!-- Status -->
                                <div class="form-group">
                                    <input asp-for="Status" type="number" class="form-control form-control-user" placeholder="Status (rəqəmlə)" />
                                    <span asp-validation-for="Status" class="text-danger small"></span>
                                </div>

                                <!-- Qeydlər -->
                                <div class="form-group">
                                    <textarea asp-for="Notes" class="form-control form-control-user" placeholder="Əlavə qeydlər..."></textarea>
                                    <span asp-validation-for="Notes" class="text-danger small"></span>
                                </div>

                                <!-- Həkim seçimi -->
                                <div class="form-group">
                                    <select asp-for="DoctorId" asp-items="ViewBag.Doctors" class="form-control">
                                        <option disabled selected>Həkim seçin</option>
                                    </select>
                                    <span asp-validation-for="DoctorId" class="text-danger small"></span>
                                </div>

                                <!-- Pasiyent seçimi -->
                                <div class="form-group">
                                    <select asp-for="PatientId" asp-items="ViewBag.Patients" class="form-control">
                                        <option disabled selected>Pasiyent seçin</option>
                                    </select>
                                    <span asp-validation-for="PatientId" class="text-danger small"></span>
                                </div>

                                <button type="submit" class="btn btn-warning btn-user btn-block">
                                    Yadda Saxla
                                </button>
                            </form>

                            <div class="text-center mt-3">
                                <a asp-action="Index" class="small">← Görüş siyahısına qayıt</a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
